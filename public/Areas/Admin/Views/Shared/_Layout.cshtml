@if (Session["IdTK"] == null)
{
    <!--Response.Redirect("~/Admin/dang-nhap?returnUrl="+Request.Url.AbsoluteUri);-->
    Response.Redirect("~/Admin/dang-nhap");
}
@if (Session["Quyen"].ToString() != "Admin")
{
    Response.Redirect("~/Admin/dang-nhap");
}
else
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@ViewBag.Title</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.6 -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/bootstrap/css/bootstrap.css">
        <!-- Font Awesome -->
        <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/dist/css/AdminLTE.css">
        <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/dist/css/skins/_all-skins.css">
        <!-- iCheck -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/iCheck/flat/blue.css">
        <!-- Morris chart -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/morris/morris.css">
        <!-- jvectormap -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
        <!-- Date Picker -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/datepicker/datepicker3.css">
        <!-- Daterange picker -->
        <link rel="stylesheet" href="~/Areas/Admin/Content/plugins/daterangepicker/daterangepicker.css">


        <script src="~/Areas/Admin/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
        <script src="~/Areas/Admin/Content/plugins/ckeditor/ckeditor.js"></script>
        <script src="~/Areas/Admin/Content/plugins/ckfinder/ckfinder.js"></script>

        <style>
            textarea {
                resize: vertical;
            }
        </style>
    </head>



    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            <header class="main-header">
                <!-- Logo -->
                <a href="~/Admin/Home/Index" class="logo">
                    <!-- mini logo for sidebar mini 50x50 pixels -->
                    <span class="logo-mini"><b>QTV</b></span>
                    <!-- logo for regular state and mobile devices -->
                    <span class="logo-lg"><b>Quản Trị Viên</b></span>
                </a>
                <!-- Header Navbar: style can be found in header.less -->
                <nav class="navbar navbar-static-top">
                    <!-- Sidebar toggle button-->
                    <a href="javascript:void(0)" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only"></span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    @if (Session["IdTK"] != null)
                                    {
                                        <img src="@Session["AnhDaiDien"]" class="user-image" alt="User Image">
                                    }
                                    <span class="hidden-xs">
                                        @if (Session["HoTen"] != null)
                                        {
                                            <span style="font-weight:bold">Xin chào: @Session["HoTen"].ToString()</span>
                                        }
                                    </span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header">
                                        @if (Session["IdTK"] != null)
                                        {
                                            <img src="@Session["AnhDaiDien"]" class="img-circle" alt="User Image">
                                        }
                                        <p>
                                            @if (Session["IdTK"] != null)
                                            {
                                                <span style="font-weight:bold">@Session["HoTen"].ToString()</span><br />
                                                <small>Mã số: @Session["IdTK"].ToString()</small>
                                                <small>Email: @Session["Email"].ToString()</small>
                                            }

                                        </p>
                                    </li>

                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                        </div>
                                        <div class="pull-right">
                                            @if (Session["IdTK"] != null)
                                            {
                                                <a style="color:#fff;background:#3c8dbc" href="~/Admin/TaiKhoan/DangXuat" class="btn btn-primary">Đăng xuất</a>
                                            }
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!-- Left side column. contains the logo and sidebar -->
            <aside class="main-sidebar">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-left image">
                            @if (Session["AnhDaiDien"] != null)
                            {
                                <img src="@Session["AnhDaiDien"].ToString()" class="img-circle" alt="User Image">

                            }
                        </div>
                        <div class="pull-left info">
                            <p>
                                @if (Session["HoTen"] != null)
                                {

                                    <span style="font-weight:bold">@Session["HoTen"].ToString()</span>

                                }
                            </p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>
                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                        <li class="header">Danh mục Quản lý</li>
                        <li><a href="~/Admin/TaiKhoan/Index"><i class="glyphicon glyphicon-user"></i> <span>Tài khoản</span></a></li>
                        <li><a href="~/Admin/ThongBao/Index"><i class="glyphicon glyphicon-bullhorn"></i> <span>Thông báo</span></a></li>
                        <li><a href="~/Admin/TheLoaiBaiViet/Index"><i class="glyphicon glyphicon-folder-close"></i> <span>Thể loại bài viết</span></a></li>
                        <li class="treeview">
                            <a href="#">
                                <i class="glyphicon glyphicon-book"></i>
                                <span>Bài viết</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="~/Admin/BaiViet/Index"><i class="fa fa-circle-o"></i> Tất cả bài viết</a></li>
                                <li><a href="~/Admin/BaiViet/Daduyet"><i class="fa fa-circle-o"></i> Bài viết đã duyệt</a></li>
                                <li><a href="~/Admin/BaiViet/Chuaduyet"><i class="fa fa-circle-o"></i> Bài viết chưa duyệt</a></li>
                                <li><a href="~/Admin/BaiViet/BvLamSlide"><i class="fa fa-circle-o"></i> Bài viết làm slide</a></li>
                            </ul>
                        </li>
                        <li><a href="~/Admin/BinhLuan/Index"><i class="glyphicon glyphicon-comment"></i> <span>Bình luận bài viết</span></a></li>
                        <li><a href="~/Admin/LichLamViec/Index"><i class="glyphicon glyphicon-calendar"></i> <span>Lịch công tác</span></a></li>
                        <li><a href="~/Admin/CongVanTaiLieu/Index"><i class="glyphicon glyphicon-folder-open"></i> <span>Công văn - tài liệu</span></a></li>
                        <li><a href="~/Admin/PhongBan/Index"><i class="glyphicon glyphicon-phone-alt"></i> <span>Phòng ban</span></a></li>
                        <li><a href="~/Admin/CanBoNhanVien/Index"><i class="glyphicon glyphicon-briefcase"></i> <span>Cán bộ - nhân viên</span></a></li>
                        <li><a href="~/Admin/Album/Index"><i class="glyphicon glyphicon-hdd"></i> <span>Album</span></a></li>
                        <li><a href="~/Admin/HinhAnh/Index"><i class="glyphicon glyphicon-picture"></i> <span>Hình ảnh</span></a></li>
                        <li><a href="~/Admin/Video/Index"><i class="glyphicon glyphicon-film"></i> <span>Video</span></a></li>
                    </ul>
                </section>
                <!-- /.sidebar -->
            </aside>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Main content -->
                @RenderBody()
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 1.0
                </div>
                <strong>Copyright &copy;2016 <a target="_blank" href="https://www.facebook.com/vdh2912">Vũ Đức Hiến - CNTT - ĐHSPKT Hưng Yên</a>.</strong> All rights
                reserved.
            </footer>

        </div>
        <!-- ./wrapper -->
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button);
        </script>
        <!-- Bootstrap 3.3.6 -->
        <script src="~/Areas/Admin/Content/bootstrap/js/bootstrap.js"></script>
        <!--Lên đầu trang-->
        <script src="~/Scripts/lendautrang.js"></script>
        <!-- Morris.js charts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
        <script src="~/Areas/Admin/Content/plugins/morris/morris.min.js"></script>
        <!-- Sparkline -->
        <script src="~/Areas/Admin/Content/plugins/sparkline/jquery.sparkline.min.js"></script>
        <!-- jvectormap -->
        <script src="~/Areas/Admin/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
        <script src="~/Areas/Admin/Content/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
        <!-- jQuery Knob Chart -->
        <script src="~/Areas/Admin/Content/plugins/knob/jquery.knob.js"></script>
        <!-- daterangepicker -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
        <script src="~/Areas/Admin/Content/plugins/daterangepicker/daterangepicker.js"></script>
        <!-- datepicker -->
        <script src="~/Areas/Admin/Content/plugins/datepicker/bootstrap-datepicker.js"></script>
        <!-- Slimscroll -->
        <script src="~/Areas/Admin/Content/dist/js/app.js"></script>
        <script src="~/Areas/Admin/Content/plugins/slimScroll/jquery.slimscroll.min.js"></script>
        <script src="~/Scripts/responsive-img-editor.js"></script>
        @*<script>
            $('.textarea').wysihtml5();
            </script>*@
        <script>
            CKEDITOR.replace('editor', {
                disallowedContent: 'img{width,height};'
            });
        </script>

        <a id="back-to-top" href="#" class="btn btn-primary btn-group-sm back-to-top" role="button" title="Lên đầu trang" data-toggle="tooltip" data-placement="left">
            <span class="glyphicon glyphicon-chevron-up"></span>
        </a>
        <style>
            .back-to-top {
                cursor: pointer;
                position: fixed;
                bottom: 50px;
                right: 20px;
                display: none;
                border-radius: unset;
            }
        </style>

    </body>
</html>
}

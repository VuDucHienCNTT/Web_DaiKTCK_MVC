
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng ký tài khoản</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/dist/css/AdminLTE.min.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-box-body">
            <p class="register-logo" style="font-size:20px; font-weight:bold">Đăng ký tài khoản</p>
            @if (ViewBag.tbDangKy != null)
            {
                <label style="color:#09c4a8">@ViewBag.tbDangKy</label>
            }
            @if (ViewBag.tbTonTai != null)
            {
                <label style="color:#FA5858">@ViewBag.tbTonTai</label>
            }
            @using (Html.BeginForm("DangKy", "TaiKhoan", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    <label>Tên người dùng</label> <label id="errorten"></label>
                    <input type="text" class="form-control" name="HoTen" id="txtten" placeholder="Nhập tên người dùng">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Email</label> <label id="erroremail"></label>
                    <input type="email" class="form-control" name="Email" id="txtemail" placeholder="Nhập email của bạn">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Mật khẩu</label> <label id="errorpass"></label>
                    <input type="password" class="form-control" name="Password" id="txtmatkhau" placeholder="Nhập mật khẩu của bạn">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>Nhập lại mật khẩu</label> <label id="errorrepass"></label>
                    <input type="password" class="form-control" name="RetypePassword" id="txtlaimatkhau" placeholder="Nhập lại mật khẩu của bạn">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div hidden class="form-group has-feedback">
                    <label>Ảnh đại diên</label> <label id="errorrepass"></label>
                    <input type="text" class="form-control" name="AnhDaiDien" value="~/Areas/Admin/Content/dist/img/avatar.png">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="row" style="margin-bottom:2%">
                    <div class="col-xs-12">
                        <button type="submit" id="btnsubmit" class="btn btn-md btn-primary btn-block">Đăng ký</button>
                    </div>
                </div>
                <label> Bạn muốn quay về?</label><a href="/"> Trang chủ</a><br />
                <label> Bạn đã có tài khoản? </label><a href="~/Admin/dang-nhap"> Đăng nhập</a>
            }
        </div>
    </div>
    <!-- jQuery 2.2.3 -->
    <script src="~/Areas/Admin/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Areas/Admin/Content/bootstrap/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $('#btnsubmit').click(function () {
            var error = 0;
            if ($('#txtten').val() == "") {
                $('#errorten').text("(*)");
                $('#errorten').css("color", "#FA5858");
                error++;
            }
            else {
                $('#errorten').text("");
                $('#errorten').css("color", "#666");
            }

            if ($('#txtemail').val() == "") {
                $('#erroremail').text("(*)");
                $('#erroremail').css("color", "#FA5858");
                error++;
            }
            else {
                $('#erroremail').text("");
                $('#erroremail').css("color", "#666");
            }

            if ($('#txtmatkhau').val() == "") {
                $('#errorpass').text("(*)");
                $('#errorpass').css("color", "#FA5858");
                error++;
            }
            else {
                $('#errorpass').text("");
                $('#errorpass').css("color", "#666");
            }

            if ($('#txtlaimatkhau').val() == "") {
                $('#errorrepass').text("(*)");
                $('#errorrepass').css("color", "#FA5858");
                error++;
            }
            else if ($('#txtmatkhau').val() != $('#txtlaimatkhau').val()) {
                $('#errorrepass').text("(**)");
                $('#errorrepass').css("color", "#FA5858");
                error++;
            }
            else {
                $('#errorrepass').text("");
                $('#errorrepass').css("color", "#666");
            }

            if (error != 0) {
                return false;
            }
            else
                return true;
        });
    </script>
</body>
</html>

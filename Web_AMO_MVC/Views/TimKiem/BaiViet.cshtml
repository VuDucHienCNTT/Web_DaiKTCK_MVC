@model List<Web_AMO_MVC.Models.BAIVIET>
@{
    ViewBag.Title = "Kết quả tìm kiếm bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well-sm" style="border:1px solid #d5d5d5; margin-bottom:1%;border-radius:unset;">
    <a href="/">Trang chủ</a> >> Tìm kiếm >> Bài viết >>
</div>

Kết quả tìm kiếm cho từ khóa : <span style="font-weight:bold">@ViewBag.TuKhoa</span><br />
<br />

<div>
    @if (Model != null)
    {
        if (Model.Count <= 0)
        {
            <span style="font-weight:bold">Không tìm được kết quả nào</span>
        }
        else
        {
            foreach (var kqbv in Model)
            {
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-xs-5 col-sm-3">
                        <a href="/chi-tiet/tin-tuc-su-kien/@kqbv.IdBV/@Web_AMO_MVC.Models.ChuanHoaSEO.ConvertTitle(kqbv.TieuDe)"><img src="@kqbv.AnhBV" style="height:110px;width:100%;" /></a>
                    </div>
                    <div class="col-sm-9">
                        <a style="font-size:14px;font-weight:bold; color:#0a68db" href="/chi-tiet/tin-tuc-su-kien/@kqbv.IdBV/@Web_AMO_MVC.Models.ChuanHoaSEO.ConvertTitle(kqbv.TieuDe)">@kqbv.TieuDe<br /></a>
                        <span style="color:#999;" class="glyphicon glyphicon-time"></span> <span style="color:#999;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">@kqbv.NgayDang.Value.ToString("dd/MM/yyyy hh:mm:ss tt")</span> <span>-</span>
                        <span style="color:#999;" class="glyphicon glyphicon-eye-open"></span><span style="color:#999;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"> @kqbv.LuotXem lượt xem</span>
                        <span>-</span> <span style="color:#999;" class="glyphicon glyphicon-comment"></span><span style="color:#999;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"> @kqbv.BINHLUANs.Count bình luận</span>
                        <br />
                        @kqbv.TomTat
                    </div>
                </div>
                <hr />
            }
        }
    }
</div>